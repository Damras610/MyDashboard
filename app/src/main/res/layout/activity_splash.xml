<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_screen_background"
        tools:context=".ui.splash.SplashActivity">

    <pl.droidsonroids.gif.GifImageView
            android:layout_width="412dp"
            android:layout_height="460dp"
            android:src="@drawable/splash_screen_foreground"
            android:id="@+id/gifImageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="50sp"
            android:textColor="@color/colorAccent" android:textStyle="bold" android:textAlignment="center"
            android:fontFamily="@font/photograph_signature" android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/gifImageView" android:layout_marginBottom="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>